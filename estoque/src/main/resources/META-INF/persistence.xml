<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">

    <!-- Ambiente de Desenvolvimento (PostgreSQL ou H2 em arquivo) -->
    <persistence-unit name="ecommercePU-dev" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entidades -->
        <class>org.anasantana.entities.Product</class>
        <class>org.anasantana.entities.Category</class>
        <class>org.anasantana.entities.User</class>
        <class>org.anasantana.entities.Order</class>
        <class>org.anasantana.entities.OrderItem</class>

        <properties>
            <!-- Banco H2 em modo arquivo (pode mudar para PostgreSQL depois) -->
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:file:./data/ecommerce-dev"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Hibernate -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

    <!-- Ambiente de Testes (H2 em memória) -->
    <persistence-unit name="ecommercePU-test" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entidades -->
        <class>org.anasantana.entities.Product</class>
        <class>org.anasantana.entities.Category</class>
        <class>org.anasantana.entities.User</class>
        <class>org.anasantana.entities.Order</class>
        <class>org.anasantana.entities.OrderItem</class>

        <properties>
            <!-- Banco H2 em memória para testes -->
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:ecommerce-test;DB_CLOSE_DELAY=-1"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Hibernate -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
        </properties>
    </persistence-unit>

</persistence>